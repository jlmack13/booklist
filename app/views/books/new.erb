<div class="container">
  <form class="books-form" action="/books" method="post">
    <h1>Create a New Book Here: </h1>
    <h3>Note: All fields are optional <em>except</em> "Title".</h3>
    <!-- Title -->
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" class="form-control">
    </div>

    <!-- Author  -->
    <div class="form-group">
      <label for="author">Author</label>
      <input type="text" name="author" class="form-control">
    </div>

    <!-- Length -->
    <div class="form-group">
      <label for="length">Length</label>
      <input type="text" name="length" class="form-control">
      <span class="help-block">Please enter the number of pages in your book.</span>
    </div>

    <!-- Format -->
    <label for="format">Format</label>
    <div class="form-group">
      <input type="radio" name="format" class="" value="Paperback/Hardback">Paperback/Hardback</input>
      <input type="radio" name="format" class="" value="eBook">eBook</input>
      <input type="radio" name="format" class="" value="Audiobook">AudioBook</input>
      <span class="help-block">Please choose the format in which you read your book.</span>
    </div>

    <!-- Favorite  -->
    <div class="form-group">
      <label for="favorite">Favorite?</label>
      <input type="checkbox" name="favorite" class="" value="true">
      <span class="help-block">Check this box if this book is one of your favorites!</span>
    </div>

    <button type="submit" class="btn btn-primary" id="btn-login">Add Book</button>

  </form>
</div>
